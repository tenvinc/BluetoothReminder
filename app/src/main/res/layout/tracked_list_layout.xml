<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/majorText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="1"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/majorLabel"
        app:layout_constraintEnd_toEndOf="@+id/minorText"
        app:layout_constraintStart_toStartOf="@+id/minorText"
        app:layout_constraintTop_toTopOf="@+id/majorLabel" />

    <TextView
        android:id="@+id/majorLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Major:"
        app:layout_constraintStart_toStartOf="@+id/minorLabel"
        app:layout_constraintTop_toBottomOf="@+id/minorLabel" />

    <TextView
        android:id="@+id/minorLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Minor:"
        app:layout_constraintStart_toStartOf="@+id/uuidLabel"
        app:layout_constraintTop_toBottomOf="@+id/uuidLabel" />

    <TextView
        android:id="@+id/minorText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="1"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/minorLabel"
        app:layout_constraintEnd_toEndOf="@+id/uuidText"
        app:layout_constraintStart_toStartOf="@+id/uuidText"
        app:layout_constraintTop_toTopOf="@+id/minorLabel" />

    <TextView
        android:id="@+id/uuidLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="UUID:"
        app:layout_constraintStart_toStartOf="@+id/nameText"
        app:layout_constraintTop_toBottomOf="@+id/nameText" />

    <TextView
        android:id="@+id/uuidText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:scrollbars="horizontal"
        android:text="AVeryLongBeaconNameAVeryLongBeaconNameAVeryLongBeaconNameAVeryLongBeaconNameAVeryLongBeaconNameAVeryLongBeaconNameAVeryLongBeaconName"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/uuidLabel"
        app:layout_constraintEnd_toEndOf="@+id/nameText"
        app:layout_constraintStart_toEndOf="@+id/uuidLabel"
        app:layout_constraintTop_toTopOf="@+id/uuidLabel" />

    <TextView
        android:id="@+id/nameText"
        android:layout_width="346dp"
        android:layout_height="22dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:minWidth="200dp"
        android:text="AVeryLongBeaconNameAVeryLongBeaconNameAVeryLongBeaconName"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>